{
  "name": "weathernotify",
  "version": "1.0.0",
  "description": "WeatherNotify is an API service that allows users to subscribe to regular weather forecast updates for their chosen cities",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "migrate:make": "knex migrate:make --knexfile ./src/db/config/knexfile.ts -x ts",
    "migrate": "knex --knexfile src/db/config/knexfile.ts migrate:latest",
    "migrate:rollback": "knex --knexfile src/db/config/knexfile.ts migrate:rollback",
    "seed": "knex --knexfile src/db/config/knexfile.ts seed:run",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [],
  "author": "a.tuz86",
  "license": "ISC",
  "dependencies": {
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "knex": "^3.1.0",
    "nodemailer": "^7.0.3",
    "pg": "^8.16.0",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.18",
    "@types/nodemailer": "^6.4.17",
    "@types/uuid": "^10.0.0",
    "prettier": "^3.5.3",
    "ts-node-dev": "^2.0.0"
  }
}
